<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".JadwalMakanAyamActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A22D00"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp">

            <ImageView
                android:id="@+id/back_arrow"
                android:paddingTop="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Kembali"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal Makan Ayam"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="8dp"
                android:hint="Cari"
                android:padding="12dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#A22D00"
                android:text="Tambah"
                android:textColor="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="3 dari 10 hasil"
                    android:textColor="#616161" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Filter"
                    android:src="@drawable/ic_filter" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/kandang_1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KDG001"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/label_Tanggal_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="Tanggal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/kandang_1_title" />

                    <TextView
                        android:id="@+id/value_Tanggal_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 April 2024"
                        app:layout_constraintBaseline_toBaselineOf="@id/label_Tanggal_1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/label_waktuMakan_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Waktu Makan"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_Tanggal_1" />

                    <TextView
                        android:id="@+id/value_waktuMakan_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:00, 11:00, 14:30, 16:30"
                        app:layout_constraintBaseline_toBaselineOf="@id/label_waktuMakan_1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/label_jumlahPorsi_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Jumlah Porsi"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_waktuMakan_1" />

                    <TextView
                        android:id="@+id/value_jumlahPorsi_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="100 Kg"
                        app:layout_constraintBaseline_toBaselineOf="@id/label_jumlahPorsi_1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/edit_icon_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_jumlahPorsi_1"
                        app:tint="#808080" />

                    <ImageView
                        android:id="@+id/delete_icon_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_delete"
                        app:layout_constraintEnd_toStartOf="@id/edit_icon_1"
                        app:layout_constraintTop_toTopOf="@id/edit_icon_1"
                        app:tint="#808080" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/kandang_2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KDG002"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/label_Tanggal_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="Tanggal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/kandang_2_title" />

                    <TextView
                        android:id="@+id/value_Tanggal_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 April 2024"
                        app:layout_constraintBaseline_toBaselineOf="@id/label_Tanggal_2"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/label_waktuMakan_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Waktu Makan"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_Tanggal_2" />

                    <TextView
                        android:id="@+id/value_waktuMakan_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:00, 11:00, 14:30, 16:30"
                        app:layout_constraintBaseline_toBaselineOf="@id/label_waktuMakan_2"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/label_jumlahPorsi_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Jumlah Porsi"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_waktuMakan_2" />

                    <TextView
                        android:id="@+id/value_jumlahPorsi_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="100 Kg"
                        app:layout_constraintBaseline_toBaselineOf="@id/label_jumlahPorsi_2"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/edit_icon_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_jumlahPorsi_2"
                        app:tint="#808080" />

                    <ImageView
                        android:id="@+id/delete_icon_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_delete"
                        app:layout_constraintEnd_toStartOf="@id/edit_icon_2"
                        app:layout_constraintTop_toTopOf="@id/edit_icon_2"
                        app:tint="#808080" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/kandang_3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KDG003"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/label_Tanggal_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="Tanggal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/kandang_3_title" />

                    <TextView
                        android:id="@+id/value_Tanggal_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 April 2024"
                        app:layout_constraintBaseline_toBaselineOf="@id/label_Tanggal_3"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/label_waktuMakan_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Waktu Makan"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_Tanggal_3" />

                    <TextView
                        android:id="@+id/value_waktuMakan_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:00, 11:00, 14:30, 16:30"
                        app:layout_constraintBaseline_toBaselineOf="@id/label_waktuMakan_3"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/label_jumlahPorsi_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Jumlah Porsi"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_waktuMakan_3" />

                    <TextView
                        android:id="@+id/value_jumlahPorsi_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="100 Kg"
                        app:layout_constraintBaseline_toBaselineOf="@id/label_jumlahPorsi_3"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/edit_icon_3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_jumlahPorsi_3"
                        app:tint="#808080" />

                    <ImageView
                        android:id="@+id/delete_icon_3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_delete"
                        app:layout_constraintEnd_toStartOf="@id/edit_icon_3"
                        app:layout_constraintTop_toTopOf="@id/edit_icon_3"
                        app:tint="#808080" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>