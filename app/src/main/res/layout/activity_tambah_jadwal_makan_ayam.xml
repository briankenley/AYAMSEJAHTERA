<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#F5F5F5"
    tools:context=".TambahJadwalMakanAyamActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonSimpan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#A22D00"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Tambah Vaksinasi Ayam"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="ID Kandang"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/editTextIdKandang"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:hint="KDG001"
                    android:paddingHorizontal="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Tanggal"
                    android:textColor="#333333" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editTextTanggal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="dd/mm/yy"
                        android:inputType="date"
                        android:paddingStart="16dp"
                        android:paddingEnd="50dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#888888" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Waktu Makan"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/editTextWaktu1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="00:00"
                    android:inputType="time"
                    android:paddingHorizontal="16dp" />

                <EditText
                    android:id="@+id/editTextWaktu2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="00:00"
                    android:inputType="time"
                    android:paddingHorizontal="16dp" />

                <EditText
                    android:id="@+id/editTextWaktu3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="00:00"
                    android:inputType="time"
                    android:paddingHorizontal="16dp" />

                <EditText
                    android:id="@+id/editTextWaktu4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="00:00"
                    android:inputType="time"
                    android:paddingHorizontal="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Jumlah Porsi (Kg)"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/editTextJumlahPorsi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:hint=""
                    android:paddingHorizontal="16dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonSimpan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:backgroundTint="#A22D00"
        android:text="Simpan"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>